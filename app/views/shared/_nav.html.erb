<div class="nav-bar">
<% if logged_in? %>
  <button class="button"><%= link_to "Profile", user_path(current_user) %></button>
  <button class="button"><%= link_to "Logout", logout_path %></button>
<% else %>
  <button class="button"><%= link_to "Sign Up", new_user_path %></button>
  <button class="button"><%= link_to "Log In", login_path %></button>
<% end %>
<% if logged_in? && current_user.is_mentor? %>
  <button class="button"><%= link_to "Create an Appointment", new_appointment_path %></button>
<% end %>
<button class="button"><%= link_to "View Appointments", appointments_path %></button>
</div>