<h1>Log in</h1>

<%= form_tag new_login_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= email_field_tag :email %>
  </p>

  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag "Log In" %>
  </p>
<% end %>

<%= link_to "Register", new_user_path %>


