

<% if @errors %>
  <ul>
    <% @errors.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>
  

  <%= form_for @appointment do |f| %>

  <p>
    Start Time:
    <%= f.datetime_select :start_time, :ampm => true, :start_year => 2011, :minute_step => 30, :order => [:month, :day, :year] %>
  </p>

  <p>
  End Time:
    <%= f.datetime_select :end_time, :ampm => true, :start_year => 2011, :minute_step => 30, :order => [:month, :day, :year] %>

  </p>
  <p>
  Phase
    <%= f.select :phase, [1, 2, 3] %>
  </p>
  <p>
    Teaching Strengths:<br>
    <%= f.text_area :body %>
  </p>
  Topics:
  <%= text_field_tag "topics" %>

  <p>
    <%= f.submit "Create Appointment" %>
  </p>
<% end %>
